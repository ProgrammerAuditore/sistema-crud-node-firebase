<script type="module">
  import { getAuth, signOut } from "https://www.gstatic.com/firebasejs/9.7.0/firebase-auth.js";
  const btnSalir = document.querySelector('#btn-salir');

  btnSalir.addEventListener('click', function(e){
    swal({
      title: "Aviso",
      text: "Estás seguro que deseas cerar sesión del sistema?",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    })
    .then((cerarr_sesion) => {
      if (cerarr_sesion) {
        fncCerrarSesion();
      } else {
        swal("Aún no has cerrado sesión.");
      }
    });
  });

  function fncCerrarSesion(){
    const auth = getAuth();
    signOut(auth).then(() => {
      swal("Enhorabuena", "Ha cerrado sesión exitosamente.", "success");
    }).catch((error) => {
      const errorCode = error.code;
      const errorMessage = error.message;
      swal(`Error ${errorCode}`, `${errorMessage}`, "error");
    });
  }

</script>